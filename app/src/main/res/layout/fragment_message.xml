<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.theappsignal.lauresoft.theappsignal.message.MessageFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the message that will be sent to your contacts when you push the emergency button:"
        android:textStyle="italic"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Help, I am in danger"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please come as quickly as possible to:"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/gpsLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my location"
        />

    <Button
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Save"
        android:id="@+id/btn_saveMessage"/>
</LinearLayout>
